<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.saf9.mobile.find_dining.mapper.ImageMapper">
    <select id="getAllImages" resultType="Image">
        SELECT image_id, review_id, image_link
        FROM image
    </select>

    <select id="getImageById" parameterType="String" resultType="Image">
        SELECT image_id, review_id, image_link
        FROM image
        WHERE image_id = #{image_id}
    </select>

    <insert id="insertImage" parameterType="Image">
        INSERT INTO image(review_id, image_link)
        values (#{review_id}, #{image_link})
    </insert>

    <update id="updateImage" parameterType="Image">
        UPDATE image
        SET review_id = #{review_id}, image_link = #{image_link}
        WHERE image_id = #{image_id}
    </update>

    <delete id="deleteImageById" parameterType="String">
        DELETE
        FROM image
        WHERE image_id = #{image_id}
    </delete>


</mapper>
